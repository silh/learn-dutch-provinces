{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
